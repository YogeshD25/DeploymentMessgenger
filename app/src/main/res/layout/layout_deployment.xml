<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deploymentCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="@dimen/large_padding"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/neml"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_margin="@dimen/small_margin"
                android:layout_alignParentRight="true"
                android:padding="4dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/textDeploymentNo"
                android:text="Deployment NO:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textDeploymentNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="Deploymenet"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDeploymentNo"
                android:layout_toLeftOf="@id/textRequesterName"
                android:text="Requester Manager:"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textRequesterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDeploymentNo"
                android:layout_marginLeft="5dp"

                android:layout_toLeftOf="@id/imageView"
                android:textColor="#000000"
                android:text="REQUESTER NAME "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textRequesterName"
                android:layout_toLeftOf="@id/textRequestermanager"
                android:text="Requester Manager:"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textRequestermanager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textRequesterName"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="Requester Manager"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textRequestermanager"
                android:layout_toLeftOf="@id/textCreatedDate"
                android:text="Created Date: "
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textRequestermanager"
                android:layout_marginLeft="5dp"

                android:layout_toLeftOf="@id/imageView"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:text="32/07/2019"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCreatedDate"
                android:layout_toLeftOf="@id/textUatApprovalName"
                android:text="Approvar Name: "
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textUatApprovalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCreatedDate"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textUatApprovalName"
                android:layout_toLeftOf="@id/textProjectName"
                android:text="Project name: "
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textProjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textUatApprovalName"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="Project Name"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textProjectName"
                android:layout_toLeftOf="@id/textDeploymentType"
                android:text="Deployment Type: "
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textDeploymentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textProjectName"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="Deployment Type"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDeploymentType"
                android:layout_toLeftOf="@id/textSRNno"
                android:text="SRN NO: "
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textSRNno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textDeploymentType"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="Srn No"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textSRNno"
                android:layout_toLeftOf="@id/textSRNno"
                android:text="Version No: "
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textVersionNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textSRNno"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/imageView"
                android:text="Version No"
                android:textColor="#000000"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>